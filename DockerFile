# ---- Build stage ----
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiem fișierele .csproj separat (optimizare cache)
COPY *.sln .
COPY rezolvam.Domain/*.csproj rezolvam.Domain/
COPY rezolvam.Application/*.csproj rezolvam.Application/
COPY rezolvam.Infrastructure/*.csproj rezolvam.Infrastructure/
COPY AdminMVC/*.csproj AdminMVC/

RUN dotnet restore

# Copiem restul codului și facem publish
COPY . .
RUN dotnet publish AdminMVC/AdminMVC.csproj -c Release -o /app/publish

# ---- Runtime stage ----
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
EXPOSE 8080
ENTRYPOINT ["dotnet", "AdminMVC.dll"]
