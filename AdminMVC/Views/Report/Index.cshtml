@using rezolvam.Application.Common
@using rezolvam.Application.DTOs
@model PagedList<ReportDto>

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Reports</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Report</a>
    </div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @* Previous *@
        <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
            @if (Model.HasPrevious)
            {
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
            }
            else
            {
                <span class="page-link">Previous</span>
            }
        </li>

        @* Pagini numerotate *@
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                @if (i == Model.PageIndex)
                {
                    <span class="page-link">@i</span>
                }
                else
                {
                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
                }
            </li>
        }

        @* Next *@
        <li class="page-item @(Model.HasNext ? "" : "disabled")">
            @if (Model.HasNext)
            {
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
            }
            else
            {
                <span class="page-link">Next</span>
            }
        </li>
    </ul>
</nav>
    <div class="row mb-3">
        <div class="col">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search reports..."
                       value="@Context.Request.Query["searchTerm"]" />
                <input type="hidden" name="pageSize" value="@Model.PageSize" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
    </div>



    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.PhotoUrl))
                            {
                                <img src="@item.PhotoUrl" alt="Report Photo" style="max-width: 100px; max-height: 100px;" />
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>