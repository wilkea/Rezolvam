@model ProfileViewModel
@using AdminMVC.ViewModel.Auth

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Name: @Model.FullName</h4>
            <p class="card-text">Email: @Model.Email</p>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Reports</h2>
        <a asp-controller="Report" asp-action="Create" class="btn btn-primary">Create New Report</a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Reports.Items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-truncate">@item.Description</p>
                        <span class="badge  @item.StatusCssClass">@item.Status</span>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 d-grid">
                        <a asp-controller="Report" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Reports.TotalPages > 1)
    {
        <nav class="mt-4" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Reports.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Profile" asp-route-pageIndex="@(Model.Reports.PageIndex - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.Reports.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Reports.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Profile" asp-route-pageIndex="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.Reports.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Profile" asp-route-pageIndex="@(Model.Reports.PageIndex + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
