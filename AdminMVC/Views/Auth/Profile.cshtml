@model ProfileViewModel

<h2>Profilul meu</h2>

<div class="mb-3">
    <form asp-action="UpdateProfile" method="post" class="row g-2">
        <div class="col-md-4">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="col-md-4 align-self-end">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>

    <p class="mt-3"><strong>Roles:</strong></p>
    <ul>
        @foreach (var role in Model.Roles)
        {
            <li>@role</li>
        }
    </ul>
</div>

@if (Model.Reports != null)
{
    <h3>My Reports</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model.Reports.Items)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.Status</td>
                <td><a asp-controller="Report" asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-secondary">View</a></td>
            </tr>
        }
        </tbody>
    </table>
}
