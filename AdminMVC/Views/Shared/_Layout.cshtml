<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rezolvam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminMVC.styles.css" asp-append-version="true" />
    <style>
        table.table th,
        table.table td {
            overflow: hidden;
            /* ascunde conținutul ce depășește */
            text-overflow: ellipsis;
            /* pune ... când e prea lung */
            white-space: nowrap;
            /* nu face wrap pe mai multe linii */
        }

        /* Setează lățimi fixe coloanelor (ajustează după nevoie) */
        th:nth-child(1),
        td:nth-child(1) {
            width: 20%;
        }

        /* Title */
        th:nth-child(2),
        td:nth-child(2) {
            width: 30%;
        }

        /* Description */
        th:nth-child(3),
        td:nth-child(3) {
            width: 10%;
        }

        /* Status */
        th:nth-child(4),
        td:nth-child(4) {
            width: 20%;
        }

        /* Photo */
        th:nth-child(5),
        td:nth-child(5) {
            width: 20%;
        }

        .description-truncate {
            max-width: 400px; /* ajustează după cât vrei să ocupe coloana */
            white-space: nowrap; /* text pe o singură linie */
            overflow: hidden; /* ascunde ce depășește */
            text-overflow: ellipsis; /* afișează ... */
        }

        /* Actions */
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Rezolvam</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Report"
                                asp-action="Index">Reports</a>
                        </li>
                        @if(User.IsInRole("Admin")){
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin"
                                asp-action="Index">AdminPanel</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
            <ul class="navbar-nav ms-auto">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Profile">Profil</a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Rezolvam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
